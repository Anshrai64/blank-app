# AI ChatBot Pro - Environment Configuration
# Copy this file to .env and add your actual API keys

# OpenAI Configuration
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-4-vision-preview

# Google Search Configuration (Optional)
GOOGLE_API_KEY=your-google-api-key-here
GOOGLE_CSE_ID=your-custom-search-engine-id

# App Configuration
DEBUG=False
LOG_LEVEL=INFO

# Performance Settings
MAX_CHAT_HISTORY=100
SESSION_TIMEOUT=3600

# Voice Settings
SPEECH_RECOGNITION_LANGUAGE=en-US
TTS_LANGUAGE=en
TTS_SLOW=False

# Camera Settings
CAMERA_WIDTH=640
CAMERA_HEIGHT=480
CAMERA_FPS=30

# Security Settings
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# Instructions:
# 1. Copy this file to .env: cp .env.example .env
# 2. Replace the placeholder values with your actual API keys
# 3. For OpenAI: Get your API key from https://platform.openai.com/api-keys
# 4. For Google Search: Set up Custom Search Engine at https://cse.google.com/
# 5. Save the file and restart the application